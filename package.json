{
  "name": "stateful-md",
  "version": "1.0.0",
  "description": "A stateful markdown sharing application with visibility control",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "dev": "ts-node src/index.ts",
    "clean": "rm -rf dist",
    "test-server": "node scripts/test-visibility-server.js",
    "demo": "npm run build && concurrently \"npm run test-server\" \"sleep 3 && npm start -- s-md-visible --file ./scripts/example.md --sharing-name demo-doc --checking-url http://localhost:3001/api/check-visibility --port 3000\"",
    "help": "npm start -- s-md-visible --help"
  },
  "keywords": [
    "markdown",
    "sharing",
    "stateful",
    "visibility"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "markdown-it": "^13.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/markdown-it": "^13.0.7",
    "@types/node": "^20.9.0",
    "concurrently": "^8.2.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
